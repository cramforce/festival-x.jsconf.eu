{% extends "../layouts/default.html.njk" %}

{% from "../_macros.njk" import speakersGrid %}

{% set speakerPages = contents.speakers._.pages |
    notRedirect |
    hasVideo |
    sortObjects('metadata.yt.viewsPerHour', 0, 'number') |
    reverse
%}

{% block bodyclass %}page--speakers{% endblock %}
{% block header %}
  <link rel="preconnect" href="https://www.youtube.com/">
  <link rel="preconnect" href="https://i.ytimg.com">
  <section class="grid">
    <div class="grid-item-left">
      <h1 id="speakers">Videos</h1>
    </div>
  </section>
{% endblock %}

{% block content %}
  {{ speakersGrid(contents, speakerPages, false) }}
{% endblock %}

