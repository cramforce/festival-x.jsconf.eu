<div class="youtube">
  <div class="youtube-bg" style="background-image: url(https://i.ytimg.com/vi/{{youtubeId}}/default.jpg);"></div>
  <link rel="preload" href="https://i.ytimg.com/vi/{{youtubeId}}/default.jpg" as="image">
  <iframe src="https://www.youtube.com/embed/{{ youtubeId }}"
          frameborder="0"
          allowfullscreen="true"
          onload="var p = this.parentElement; p.removeChild(p.firstElementChild)">
  </iframe> 
</div>
